<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Falling and Spinning Cubes</title>
    <style>
        body, html {
            margin: 0;
            overflow: hidden;
            height: 100%;
            background-color: #000;
        }
        #scene {
            width: 100vw;
            height: 100vh;
            perspective: 1000px;
            position: relative;
        }
        .cube {
            width: 100px;
            height: 100px;
            position: absolute;
            top: -100px;
            left: 50%;
            transform-style: preserve-3d;
            animation: fall 5s linear infinite, spin 5s linear infinite;
        }
        .face {
            position: absolute;
            width: 100px;
            height: 100px;
            background-size: cover;
            background-position: center;
        }
        .front  { transform: translateZ(50px); }
        .back   { transform: rotateY(180deg) translateZ(50px); }
        .right  { transform: rotateY(90deg) translateZ(50px); }
        .left   { transform: rotateY(-90deg) translateZ(50px); }
        .top    { transform: rotateX(90deg) translateZ(50px); }
        .bottom { transform: rotateX(-90deg) translateZ(50px); }

        @keyframes fall {
            0% { top: -100px; }
            100% { top: 100vh; }
        }
        @keyframes spin {
            0% { transform: rotateX(0) rotateY(0); }
            100% { transform: rotateX(360deg) rotateY(360deg); }
        }
    </style>
</head>
<body>
    <div id="scene"></div>
    <script>
        const scene = document.getElementById('scene');
        const materials = ['glass', 'metal', 'stone'];

        function createCube(material) {
            const cube = document.createElement('div');
            cube.className = 'cube';
            ['front', 'back', 'right', 'left', 'top', 'bottom'].forEach(faceName => {
                const face = document.createElement('div');
                face.className = 'face ' + faceName;
                face.style.backgroundImage = `url('assets/textures/${material}.jpg')`;
                cube.appendChild(face);
            });
            scene.appendChild(cube);
        }

        function generateCubes() {
            setInterval(() => {
                const material = materials[Math.floor(Math.random() * materials.length)];
                createCube(material);
            }, 1000);
        }

        generateCubes();
    </script>
</body>
</html>